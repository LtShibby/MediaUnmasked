{
  "version": 2,
  "builds": [
    {
      "src": "api/analyze.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd frontend && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "methods": ["POST"],
      "dest": "api/analyze.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/analyze.py"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "^/((?!api/).*)",
      "dest": "/index.html"
    }
  ],
  "outputDirectory": "frontend/dist"
} 
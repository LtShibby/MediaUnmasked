{
  "version": 2,
  "builds": [
    {
      "src": "src/mediaunmasked/web/api.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd frontend && npm install && npm run build"
      },
      "output": "frontend/dist"
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "src/mediaunmasked/web/api.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "src/mediaunmasked/web/api.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "outputDirectory": "frontend/dist"
} 
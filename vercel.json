{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 10,
      "runtime": "python@3.9",
      "excludeFiles": "**/*.{jpg,jpeg,png,gif,webp,mp4,webm,mp3,wav,pdf,zip,tar,gz}"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "TRANSFORMERS_CACHE": "/tmp/transformers_cache",
    "HF_HOME": "/tmp/huggingface"
  }
} 